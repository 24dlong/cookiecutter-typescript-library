      "types": "./dist/main.d.ts"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.27.0",
    "@semantic-release/changelog": "^6.0.3",
