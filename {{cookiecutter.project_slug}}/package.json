{
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <23",
    "pnpm": ">=10.0.0 <11"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.31.0",
    "@semantic-release/changelog": "6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.5",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "semantic-release": "24.2.7",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint:actionlint": "./.cache/bin/actionlint -color ./.github/workflows/*.yml",
    "lint": "eslint . && prettier . --check --ignore-unknown && pnpm lint:actionlint",
    "lint:fix": "eslint --fix && prettier . --write --ignore-unknown && pnpm lint:actionlint",
    "setup:actionlint": "./scripts/setup-actionlint.sh",
    "prepare": "husky"
  }
}
